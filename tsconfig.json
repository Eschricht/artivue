{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "DOM"
    ],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "artivue": ["./packages/artivue/src"],
      "artivue/*": ["./packages/artivue/src/*"],
      "@artivue/unocss": ["./packages/unocss/src"],
      "@artivue/unocss/*": ["./packages/unocss/src/*"],
      "@artivue/nuxt": ["./packages/nuxt/src"],
      "@artivue/nuxt/*": ["./packages/nuxt/src/*"]
    },
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "./packages/*/src/**/*"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/playground/**"
  ]
}
